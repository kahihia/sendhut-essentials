#! /bin/bash

echo "----------------------------------------------------------"
echo "Resetting the database..."
echo "----------------------------------------------------------"

python manage.py reset_db --noinput

echo "----------------------------------------------------------"
echo "Running migrations..."
echo "----------------------------------------------------------"

python manage.py migrate

echo "----------------------------------------------------------"
echo "Creating fixtures..."
echo "----------------------------------------------------------"

if [[ $1 == "--dry" ]]; then
  echo "LOADING vendor menus"
  python manage.py load_menus --limit=200 --with-images=True
else
  echo "Creating dummy data"
  python manage.py setup_seed
fi
